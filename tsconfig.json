{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["cypress", "node"],
  },
  "include": ["**/*.ts", "./node_modules/cypress", "./cypress.config.ts"],
  "exclude": ["node_modules"],
}
